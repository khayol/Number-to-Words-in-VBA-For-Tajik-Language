               <input readonly=@readonlyMain1 class="form-control" id="Code" @bind="objIndividual.Code" />  
             </RenderFrg>
            </WrFieldInt> 

            2) 

            <WrFieldInt TransEntity="Individual" FieldCaption="Code" 
            ReadonlyOpt="readonlyMain1" Val="@objIndividual.Code" />
            
            *@ 

@code  { 

    
    [Parameter]
    public string ReadonlyOpt { get; set; }   

    [Parameter]
    public string FieldCaption { get; set; }
      
    [Parameter]
    public string TransEntity { get; set; }  
   
    [Parameter]
    public int Val { get; set; }

    [Parameter]
    public RenderFragment RenderFrg { get; set; }
    
    

}
