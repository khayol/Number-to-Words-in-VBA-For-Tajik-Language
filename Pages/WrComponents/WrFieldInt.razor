 <div class="form-group">
   <label for="@FieldCaption" class="control-lable">@trs.GetTranslation(@FieldCaption,@AppData.ActiveUser,TransEntity)</label>  
          @if (RenderFrg != null)
            {
              @RenderFrg
            }else
            {
              <input readonly=@Readonly class="form-control"  @bind="@Val" /> 
            }
  </div> 


