@page "/Adm/ApplicationUserAdd"
@inject ApplicationUserController MainController

<AuthorizeView Roles="@admSer.GetRolesList("ApplicationUserAdd")" Context="authContext">
<Authorized>
<EditForm Model="@objMain" OnValidSubmit="@Create">  
    <FluentValidationValidator />  
    <ValidationSummary/>
    <WrPnlElm>
    <ControlQuickAccess>
        <WrOper Category="EditForm" TypeInput="submit" Txt="Save"/>
        <WrOper Category="EditForm" TypeInput="button" Txt="Cancel"  OnClickCallback="Cancel"/>
    </ControlQuickAccess>
    </WrPnlElm>
  <WrFormBody>
        <FormElements>

            <WrFieldStr  FieldCaption="UserName"
            TransEntity="General"  @bind-BindingValue ="@objMain.UserName"/> 

            <WrFieldStr FieldCaption="FirstName"
            TransEntity="General"  @bind-BindingValue ="@objMain.FirstName"/>

            <WrFieldStr  FieldCaption="SecondName"
            TransEntity="General"  @bind-BindingValue ="@objMain.SecondName"/>

            <WrFieldStr  FieldCaption="LastName"
            TransEntity="General"  @bind-BindingValue ="@objMain.LastName"/>
     
       </FormElements>      
    </WrFormBody> 
</EditForm>

</Authorized>
 <NotAuthorized>
       <WrPageNotFound/>
 </NotAuthorized>
</AuthorizeView>


@code{

    [Parameter]
    public string CurrentID { get; set; }

    ApplicationUser objMain= new ApplicationUser();
  
     protected  void Create()
     { 
        MainController.Create(objMain);
        NavManager.NavigateTo("/Adm/ApplicationUserViewStd/0");
     }

    void Cancel(){
        NavManager.NavigateTo("/Adm/ApplicationUserViewStd/0");
    }

}