@page "/Adm/ApplicationUser/Edit/{CurrentID}"
@inject ApplicationUserController MainController


<WrAuth PageName="ApplicationUserEdit"><MainContent>  

<EditForm Model="@objMain" OnValidSubmit="@Update" OnInvalidSubmit="@Cancel" Context="formContext">  
    <FluentValidationValidator />  
    <ValidationSummary/>
    
    <WrPnlElm>
        <ControlQuickAccess>
            <WrOper Category="EditForm" EditOrView=true TypeInput="button" Txt="Cancel"  OnClickCallback="Cancel"/> 
            <WrOper Category="EditForm" EditOrView=true  TypeInput="submit" Txt="Update"/>
       </ControlQuickAccess>
    </WrPnlElm>

    <WrFormBody>
        <FormElements>
            <WrFieldInt TransEntity="General" FieldCaption="Code" 
            ReadonlyOpt="true" Val="@objMain.Code" />

            <WrFieldStr  FieldCaption="UserName" 
            TransEntity="General"  @bind-BindingValue ="@objMain.UserName"/> 

            <WrFieldStr FieldCaption="FirstName" 
            TransEntity="General"  @bind-BindingValue ="@objMain.FirstName"/>

            <WrFieldStr  FieldCaption="SecondName" 
            TransEntity="General"  @bind-BindingValue ="@objMain.SecondName"/>

            <WrFieldStr  FieldCaption="LastName" 
            TransEntity="General"  @bind-BindingValue ="@objMain.LastName"/>

        </FormElements>      
    </WrFormBody>    
    </EditForm>    
</MainContent></WrAuth>


@code{
    [Parameter] public string CurrentID { get; set; }
    ApplicationUser objMain = new ApplicationUser();    

    protected override void OnInitialized()
    {
        objMain = MainController.GetById_FirstOrDefault(CurrentID);
    }

    protected void Update()
    {
        MainController.Update(objMain);
        NavManager.NavigateTo("/Adm/ApplicationUser/ViewStd/0");
    }
    void Cancel()
    {
        NavManager.NavigateTo("/Adm/ApplicationUser/ViewStd/0");
    }

  
}